<% if current_user.adding_to_likes?(micropost) %>
  <%= form_for(current_user.likes.find_by(micropost_id: micropost.id), html: {method: :delete}) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag(type:'submit', class: "btn submit btn btn-primary btn-xs") do %>
     <span class="glyphicon glyphicon-star badge"><%= micropost.added_to_likes.count %></span> Release Likes
    <% end %>
  <% end %>
<% else %>
  <%= form_for(current_user.likes.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag(type:'submit', class: "btn submit btn btn-primary btn-xs") do %>
     <span class="glyphicon glyphicon-star-empty badge"><%= micropost.added_to_likes.count %></span> Add to Likes
    <% end %>
  <% end %>
<% end %>